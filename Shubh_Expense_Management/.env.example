# AWS RDS PostgreSQL Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# Database Configuration
DB_URL=jdbc:postgresql://your-rds-endpoint.region.rds.amazonaws.com:5432/expensedb
DB_USERNAME=expenseadmin
DB_PASSWORD=your-secure-password-here

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-minimum-256-bits-change-this

# File Upload Configuration
UPLOAD_DIR=/var/app/uploads

# Server Configuration
SERVER_PORT=8080

# Logging Configuration
LOG_FILE=/var/log/expense-management/application.log

# Optional: CloudWatch Metrics
CLOUDWATCH_METRICS_ENABLED=false

# Optional: API Documentation (disable in production)
API_DOCS_ENABLED=false
SWAGGER_UI_ENABLED=false

# AWS Configuration (if using AWS SDK)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
